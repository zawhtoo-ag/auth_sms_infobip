<odoo>
    <record id="res_config_settings_view_form_inherit_sms_infobip" model="ir.ui.view">
        <field name="name">auth_sms_infobip.res_config_settings_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="SMS OTP Authentication" string="SMS OTP Authentication" name="auth_sms_infobip" invisible="not website_id">
                    <block title="SMS OTP Authentication" id="auth_sms_infobip_settings">
                        <setting id="auth_sms_infobip_otp_config" colspan="4">
                            <h3>OTP Configuration</h3>
                            <div class="content-group">
                                <div class="row mt16">
                                    <field name="enable_otp_signup" class="oe_inline"/>
                                    <label for="enable_otp_signup" string="Enable OTP for Signup"/>
                                </div>
                                <div class="row mt16">
                                    <field name="enable_otp_login" class="oe_inline"/>
                                    <label for="enable_otp_login" string="Enable OTP for Login"/>
                                </div>
                                <div class="row mt16">
                                    <label for="otp_expiry_time" class="col-lg-3 o_light_label" string="OTP Expiry Time (seconds)"/>
                                    <field name="otp_expiry_time" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="otp_type" class="col-lg-3 o_light_label" string="OTP Type"/>
                                    <field name="otp_type" class="oe_inline"/>
                                </div>
                            </div>
                        </setting>
                        <setting id="auth_sms_infobip_gateway_config" colspan="4">
                            <h3>Infobip SMS Gateway</h3>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="infobip_api_key" class="col-lg-3 o_light_label" string="Infobip API Key"/>
                                    <field name="infobip_api_key" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="infobip_sender_id" class="col-lg-3 o_light_label" string="Infobip Sender ID"/>
                                    <field name="infobip_sender_id" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="infobip_sms_method" class="col-lg-3 o_light_label" string="SMS Method"/>
                                    <field name="infobip_sms_method" class="oe_inline"/>
                                </div>
                                <div class="row mt16">
                                    <label for="infobip_2fa_app_id" class="col-lg-3 o_light_label" string="Infobip 2FA App ID"/>
                                    <field name="infobip_2fa_app_id" class="oe_inline" invisible="infobip_sms_method == 'sms'"/>
                                </div>
                                <div class="row mt16">
                                    <label for="infobip_2fa_message_id" class="col-lg-3 o_light_label" string="Infobip 2FA Message ID"/>
                                    <field name="infobip_2fa_message_id" class="oe_inline" invisible="infobip_sms_method == 'sms'"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>